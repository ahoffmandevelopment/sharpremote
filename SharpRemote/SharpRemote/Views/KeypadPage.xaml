<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage
    x:Class="SharpRemote.Views.KeypadPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:SharpRemote.Controls"
    xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
    xmlns:viewModels="clr-namespace:SharpRemote.ViewModels"
    CloseWhenBackgroundIsClicked="True"
    IsAnimationEnabled="False">

    <ContentPage.BindingContext>
        <viewModels:BaseViewModel />
    </ContentPage.BindingContext>

    <Frame
        BackgroundColor="White"
        BorderColor="Black"
        HorizontalOptions="Center"
        VerticalOptions="Center">
        <Grid
            ColumnSpacing="5"
            RowSpacing="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <controls:RemoteButtonView
                Grid.Row="0"
                Grid.Column="0"
                Command="{Binding controls:RemoteButtonViewPressedCommand}"
                CommandParameter="RCKY01"
                FontSize="Large"
                Text="1" />
            <controls:RemoteButtonView
                Grid.Row="0"
                Grid.Column="1"
                Command="{Binding controls:RemoteButtonViewPressedCommand}"
                CommandParameter="RCKY02"
                FontSize="Large"
                Text="2" />
            <controls:RemoteButtonView
                Grid.Row="0"
                Grid.Column="2"
                Command="{Binding controls:RemoteButtonViewPressedCommand}"
                CommandParameter="RCKY03"
                FontSize="Large"
                Text="3" />
            <controls:RemoteButtonView
                Grid.Row="1"
                Grid.Column="0"
                Command="{Binding controls:RemoteButtonViewPressedCommand}"
                CommandParameter="RCKY04"
                FontSize="Large"
                Text="4" />
            <controls:RemoteButtonView
                Grid.Row="1"
                Grid.Column="1"
                Command="{Binding controls:RemoteButtonViewPressedCommand}"
                CommandParameter="RCKY05"
                FontSize="Large"
                Text="5" />
            <controls:RemoteButtonView
                Grid.Row="1"
                Grid.Column="2"
                Command="{Binding controls:RemoteButtonViewPressedCommand}"
                CommandParameter="RCKY06"
                FontSize="Large"
                Text="6" />
            <controls:RemoteButtonView
                Grid.Row="2"
                Grid.Column="0"
                Command="{Binding controls:RemoteButtonViewPressedCommand}"
                CommandParameter="RCKY07"
                FontSize="Large"
                Text="7" />
            <controls:RemoteButtonView
                Grid.Row="2"
                Grid.Column="1"
                Command="{Binding controls:RemoteButtonViewPressedCommand}"
                CommandParameter="RCKY08"
                FontSize="Large"
                Text="8" />
            <controls:RemoteButtonView
                Grid.Row="2"
                Grid.Column="2"
                Command="{Binding controls:RemoteButtonViewPressedCommand}"
                CommandParameter="RCKY09"
                FontSize="Large"
                Text="9" />
            <controls:RemoteButtonView
                Grid.Row="3"
                Grid.Column="0"
                Command="{Binding controls:RemoteButtonViewPressedCommand}"
                CommandParameter="RCKY10"
                FontSize="Large"
                Text="." />
            <controls:RemoteButtonView
                Grid.Row="3"
                Grid.Column="1"
                Command="{Binding controls:RemoteButtonViewPressedCommand}"
                CommandParameter="RCKY00"
                FontSize="Large"
                Text="0" />
            <controls:RemoteButtonView
                Grid.Row="3"
                Grid.Column="2"
                Command="{Binding controls:RemoteButtonViewPressedCommand}"
                CommandParameter="RCKY11"
                FontSize="Large"
                Text="ENT" />
        </Grid>
    </Frame>
</pages:PopupPage>